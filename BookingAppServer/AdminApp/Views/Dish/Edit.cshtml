@model AdminApp.Requests.EditDishRequest

@{
    ViewBag.Title = "Edit";
    Layout = "_Layout";
}

<div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col col-xl-10">
            <div class="card" style="border-radius: 1rem;">
                <div class="row g-0">
                    <div class="col-md-6 col-lg-5 d-none d-md-block">
                        <img src="@Model.ImageUrl"
                             alt="register form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;"/>
                        <img src="@Model.ImageUrl"
                             alt="register form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;"/>
                    </div>
                    <div class="col-md-6 col-lg-7 d-flex align-items-center">
                        <div class="card-body p-4 p-lg-5 text-black">

                            <form asp-action="Edit">
                                <input hidden="" asp-for="Id"/>
                                <div class="d-flex align-items-center mb-3 pb-1">
                                    <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>
                                    <span class="h1 fw-bold mb-0">@Model.Name</span>
                                </div>

                                <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Change the information</h5>
                                <div class="text-danger" asp-validation-summary="All"></div>
                                <div class="form-outline mb-4">
                                    <label class="form-label" for="form2Example17">Category</label>
                                    <input type="text" id="form2Example17" class="form-control form-control-lg"
                                           asp-for="Category"
                                           placeholder="Type the valid email"/>
                                    <span class="text-danger" asp-validation-for="Category"></span>
                                </div>

                                <div class="form-outline mb-4">
                                    <label class="form-label" for="Username">Username</label>
                                    <input type="text" id="Username" class="form-control form-control-lg"
                                           asp-for="Name"
                                           placeholder="Bob"/>
                                    <span class="text-danger" asp-validation-for="Name"></span>
                                </div>
                                <div class="form-outline mb-4">
                                    <label class="form-label" for="Phone">Phone</label>
                                    <input type="text" id="Phone" class="form-control form-control-lg"
                                           asp-for="Description"
                                           placeholder="0909 123 456"/>
                                    <span class="text-danger" asp-validation-for="Description"></span>
                                </div>

                                <div class="form-outline mb-4">
                                    <label class="form-label" for="Password">Calorie</label>
                                    <input type="number" id="Password" class="form-control form-control-lg"
                                           asp-for="Calorie"/>
                                    <span class="text-danger" asp-validation-for="Calorie"></span>
                                </div>
                                <div class="form-outline mb-4">
                                    <label class="form-label" for="Confirm">Price</label>
                                    <input type="number" id="Confirm" class="form-control form-control-lg"
                                           asp-for="Price"/>
                                    <span class="text-danger" asp-validation-for="Price"></span>
                                </div>
                                <div class="form-outline mb-4">
                                    <label class="form-label" for="ImageUrl">ImageUrl</label>
                                    <input type="text" id="ImageUrl" class="form-control form-control-lg"
                                           asp-for="ImageUrl"
                                           placeholder="Url for image"/>
                                    <span class="text-danger" asp-validation-for="ImageUrl"></span>
                                </div>
                                <div class="pt-1 mb-4">
                                    <button class="btn btn-dark btn-lg btn-block" type="submit">Update</button>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
    <script type="application/javascript">
     $(document).ready(function () {
          
     }); //end document
  </script>
}