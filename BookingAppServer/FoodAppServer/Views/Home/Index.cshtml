@model List<CategoryVm>
@{
    ViewData["Title"] = "Home Page";
}

<div class="d-flex">

    @foreach (var category in Model)
    {
        <div class="card mx-2" style="width: 30rem;">
            <img src="@category.Image" class="card-img-top" alt="categories" style="width: 100%; height: 250px">
            <div class="card-body">
                <h5 class="card-title">@category.Name</h5>
                <p class="card-text">The description of each Categories</p>
                <a asp-action="GetDishesbyCategory" asp-route-category="@category.Name" class="btn btn-info">Go</a>
            </div>
        </div>
    }
</div>